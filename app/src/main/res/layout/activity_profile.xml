<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".ui.activities.Profile">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="260dp"
        android:id="@id/appbar"
        android:background="@android:color/transparent">

		<include layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:backgroundTintMode="src_in">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/user_profile">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/fg"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/profile_pic"
                    app:civ_border_color="#f4f4f4"
                    app:civ_border_width="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0782085695"
                    android:textColor="#464646"
                    android:layout_marginTop="14dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/drawer_image"
                    android:id="@+id/profile_phone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/stats"
                android:layout_marginTop="20dp"
                android:layout_below="@id/user_profile"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/bottom_menu_friend"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textColor="#464646"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="15sp" />


                </LinearLayout>

                <View android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/achievement"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textColor="#464646"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="15sp" />


                </LinearLayout>

                <View android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/win"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textColor="#464646"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

	</android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="4dp"
            android:id="@+id/abtMe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:layout_below="@+id/abtMe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>



</RelativeLayout>
