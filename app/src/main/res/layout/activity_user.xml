<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    tools:context="nassaty.playmatedesign.ui.activities.UserData">

    <include layout="@layout/layout_toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/fg"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:id="@+id/profile_pic"
        android:layout_below="@+id/toolbar"/>

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/crop"
        android:layout_below="@+id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/image_crop"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/prof">

        <android.support.design.widget.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="Enter your name"
            android:id="@+id/profile_name"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/prof"
        android:background="@drawable/button_auth_design"
        android:text="Start"
        android:textColor="#fff"
        android:layout_marginTop="60dp"
        android:onClick="begin"/>



</RelativeLayout>
