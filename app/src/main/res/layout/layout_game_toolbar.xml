<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:id="@+id/game_toolbar_layout"
    android:theme="@style/AppTheme">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fg"
                    app:civ_border_width="2dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="@color/text_color"
                    android:layout_alignParentStart="true"
                    android:id="@+id/trigger_image"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/trigger_image"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:text="Prince"
                    android:id="@+id/trigger_name"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/secondary_text"
                    android:textStyle="bold"
                    android:text="$200"
                    android:id="@+id/trigger_price"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-smallcaps"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/trigger_image"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:text="5"
                        android:id="@+id/trigger_position"
                        android:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:text="ACTIVE"
                        android:id="@+id/trigger_status"
                        android:fontFamily="sans-serif-smallcaps" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="0.5dp"
            android:layout_height="80dp"
            android:id="@+id/divider"
            android:layout_gravity="center_vertical"
            android:background="@color/divider_color"/>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fg"
                    app:civ_border_width="2dp"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="@color/text_color"
                    android:layout_alignParentStart="true"
                    android:id="@+id/opponent_image"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/opponent_image"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:text="Prince"
                    android:id="@+id/opponent_name"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/secondary_text"
                    android:textStyle="bold"
                    android:text="$200"
                    android:id="@+id/opponent_price"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif-smallcaps"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/opponent_image"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:text="5"
                        android:id="@+id/opponent_position"
                        android:fontFamily="sans-serif-smallcaps" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:text="ACTIVE"
                        android:id="@+id/opponent_status"
                        android:fontFamily="sans-serif-smallcaps" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.design.widget.AppBarLayout>