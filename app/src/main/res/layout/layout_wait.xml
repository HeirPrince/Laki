<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game will start in"
        android:id="@+id/title"/>

    <com.dinuscxj.progressbar.CircleProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        app:draw_progress_text="true"
        app:progress_text_size="10sp"
        app:progress_text_format_pattern=""
        app:progress_stroke_cap="butt"
        app:progress_stroke_width="2dp"
        app:progress_start_color="#464646"
        app:progress_end_color="@color/colorPrimary"
        app:progress_shader="radial"
        app:line_width="2dp"
        app:line_count="100"
        android:id="@+id/progress"
        app:progress_text_color="@color/colorAccent"/>

</RelativeLayout>